<Window x:Class="SimpleCalculator.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleCalculator"
        mc:Ignorable="d"
        Title="Help" 
        Height="280" 
        Width="300"
        Background="DarkSlateBlue">
    <Grid>
        <StackPanel>
            <TextBlock Padding="10" TextWrapping="Wrap">
                This application allows you to calculate the volume 
                or surface area of a rectangular prism.
            </TextBlock>
            <Label 
                Content="1) Select desired calculation."
                Padding="10"/>
            <Label 
                Content="2) Select desired units."
                Padding="10"/>
            <Label 
                Content="3) Input width, length and height."
                Padding="10"/>
            <Label 
                Content="4) Press Calculate."
                Padding="10"/>
            <Button
                x:Name="Button_Close"
                Height="30"
                Width="80"
                Content="Close" Click="Button_Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
